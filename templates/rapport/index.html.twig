{% extends 'base.html.twig' %}

{% block title %}Rapport index{% endblock %}

{% block body %}
    <h1>Liste des rapports</h1>
    <a href="{{ path('rapport_new') }}">Nouveau rapport</a>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Motif</th>
                <th>Bilan</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rapport in rapports %}
            <tr>
                <td>{{ rapport.date }}</td>
                <td>{{ rapport.motif }}</td>
                <td>{{ rapport.bilan }}</td>
                <td><a href="{{ path('rapport_edit', {'id': rapport.id}) }}">edit</a></td>
                <td><a href="{{ path('rapport_show', {'id': rapport.id}) }}">show</a></td>
                </tr>
                
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
